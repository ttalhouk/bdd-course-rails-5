<%if user_signed_in? %>
  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to "New Article", new_article_path, class:"btn btn-success btn-lg" %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <% if @articles.empty? %>
      <h1 id='no-articles'>No Articles Created</h1>
    <% else %>
      <% @articles.each do |article|%>
        <div class="article-title">
          <%= link_to article.title, article_path(article)%>

        </div>
        <div class="article-body">
          <%= truncate(article.body, length: 500) %>
        </div>

        <div class="author">
          <small>Created by: <%= article.author.email %></small>

        </div>
        <hr />
      <% end %>
    <% end %>
  </div>
</div>
