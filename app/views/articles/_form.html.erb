<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(article, html: {class:'form-horizontal', role: "form"}) do |f|%>
      <% if article.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class="panel-heading">
            <strong class='panel-title'>The form has <%= pluralize(article.errors.count, "error")%></strong>
          </div>
          <div class="panel-body">
            <ul>
              <% article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :title %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :title, class: "form-control", placeholder:"Article Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :body %>
        </div>
        <div class="col-md-11">
          <%= f.text_area :body, class: "form-control", placeholder:"Article Content", rows:10 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-8">
          <%= f.submit class:"btn btn-primary btn-lg pull-right"%>
        </div>
      </div>
    <% end %>

  </div>

</div>
